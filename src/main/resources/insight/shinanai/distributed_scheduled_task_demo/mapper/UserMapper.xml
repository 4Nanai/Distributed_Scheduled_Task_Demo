<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="insight.shinanai.distributed_scheduled_task_demo.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="insight.shinanai.distributed_scheduled_task_demo.domain.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="role" column="role"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,username,password,email,role,created_at,
        updated_at
    </sql>
    <select id="getUserByUsername" resultType="insight.shinanai.distributed_scheduled_task_demo.domain.User">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        users
        WHERE
        username = #{username}
    </select>
</mapper>
